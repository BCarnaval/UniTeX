% Colored blocks
\definecolor{sweet_blue}{RGB}{214, 214, 239} % #09376e
\definecolor{sweet_green}{RGB}{163, 209, 175} % #a3d1af
\definecolor{hard_green}{RGB}{119, 187, 137} % #66b27b
\definecolor{sweet_orange}{RGB}{250, 200, 152} % #FAC898

\newenvironment{defblock}[1]{
    \tcolorbox[noparskip, colback=white,
    colframe=sweet_green, boxrule=1pt, arc=1pt, title=#1, coltitle=black]}
    {\endtcolorbox
}
\newenvironment{noteblock}[1]{
    \tcolorbox[noparskip, colback=white,
    colframe=sweet_orange, boxrule=1pt, arc=1pt, title=#1, coltitle=black]}
    {\endtcolorbox
}
\newenvironment{colorblock}[1]{
    \tcolorbox[noparskip, colback=white,
    colframe=sweet_blue, boxrule=1pt, arc=1pt, title=#1, coltitle=black]}
    {\endtcolorbox
}

% Colored boxes
\newtcolorbox{mybox}{
    tcbox width=auto limited, capture=hbox, on line,
  colback=white, colframe=sweet_blue, arc=1pt, boxrule=1pt
}

\renewcommand{\boxed}[1]{
  \begin{mybox}
      \hspace{0.05cm}#1
  \end{mybox}
}
