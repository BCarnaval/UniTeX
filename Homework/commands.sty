% -------------
% Colored Boxes
% -------------
\newtcolorbox{mybox}{
  tcbox width=auto limited,capture=hbox,on line,
  colback=white,colframe=\MasterColor,size=fbox,arc=0pt
}

\newtcbox{\mymath}[1][]{
    nobeforeafter, math upper, tcbox raise base,
    enhanced, colframe=\MasterColor,
    colback=white, boxrule=1pt, arc=0pt
    #1
}

% Classic colored boxes
\renewcommand{\boxed}[1]{
  \begin{mybox}
      #1
  \end{mybox}
}

% Numbered equation colored boxes
\newcommand{\MNboxed}[2]{
  \begin{empheq}[box=\mymath]{align}
      \label{#1}
      #2
  \end{empheq}
}

% Unnumbered equation colored boxes
\newcommand{\Mboxed}[1]{
  \begin{empheq}[box=\mymath]{align*}
      #1
  \end{empheq}
}

% Sections blueboxes
\newcommand{\Boxed}[1]{
  \begin{tcolorbox}[colback=white,colframe=\MasterColor,arc=0pt]
      \vspace{0.2cm}
      \section*{
        \centering
        #1
      }
      \vspace{-0.3cm}
  \end{tcolorbox}
  \vspace{0.5cm}
}

